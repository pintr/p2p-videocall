{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "backend/**/*.ts",
    "frontend/src/**/*.ts",
    "frontend/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "frontend/build",
    "dist"
  ]
}